/**index.wxss**/
/* 头部 */
.top {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-weight: 600;
  font-size: 100%;
}

.search-img,
.kefu-img {
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx 20rpx;
}

/* tab栏 */
.tab-box {
  margin: 20rpx 0;
  display: flex;
  font-size: 34rpx;
  justify-content: space-around;
  height: 60rpx;
}

.active {
  border-bottom: 8rpx solid #f15a24;
  color: #f15a24;
}

/* 轮播图 */
.banner-box {
  padding: 0 30rpx;
  height: 280rpx;
  border-radius: 30rpx;
}

.banner-box swiper-item {
  border-radius: 30rpx;
}

.banner-box swiper-item image {
  border-radius: 30rpx;
  width: 100%;
  height: 100%;
  margin: 0 10rpx;
}

/* 距离考研 */
.gap-box {
  text-align: center;
  margin: 20rpx 0;
}

.gap-box image {
  width: 90rpx;
  height: 50rpx;
}

.gap-box view {
  margin-top: 20rpx;
  height: 50rpx;
  font-size: 40rpx;
  font-weight: 400;
  color: #a0a7b8;
  line-height: 50rpx;
}

/* 近期公开课 */
.recent-box {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.recent-box .title {
  font-size: 44rpx;
  font-family: PingFang SC;
  font-weight: 600;
  color: #424963;
  line-height: 60rpx;
}

.recent-box .more {
  font-size: 32rpx;
  line-height: 60rpx;
  color: #777;
}

/* 近期公开课简历 */
.content {
  width: 100%;
  height: 280rpx;
  margin-top: 80rpx;
  display: flex;
  justify-content: space-around;
}

.content .item {
  position: relative;
  width: 28%;
  text-align: center;
  background-color: #eaeaea;
  border-radius: 10rpx;
  font-size: 28rpx;
  padding: 0 10rpx;
}

.item .title {
  margin-top: 60rpx;
  overflow: hidden;
  height: 115rpx;
}

.item image {
  position: absolute;
  top: -50rpx;
  left: 70rpx;
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid #f15a24;
  border-radius: 50%;
}

.item .button {
  background-color: #f15a24;
  border-radius: 35rpx;
  margin: 10rpx 40rpx;
  color: white;
}

.item .tag {
  color: #f15a24;
}

/* 推荐好课 */
.recommend {
  overflow: hidden;
  position: relative;
  height: 400rpx;
}

.recommend .kemu {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
  width: 120rpx;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #fff;
  text-align: center;
  overflow: hidden;
}

.recommend .text {
  margin: 80rpx 50rpx 30rpx 50rpx;
}

.news-box {
  display: flex;
  flex-wrap: wrap;
  height: 60rpx;
  overflow: hidden;
  margin: 50rpx;
}

.news-item {
  width: 30%;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.news-item .img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.news-item .img image {
  width: 98%;
  height: 100%;
  border-radius: 50%;
}

.num-box {
  margin: 0 50rpx;
  display: flex;
  justify-content: space-between;
}

.num1 {
  color: #999;
  font-size: 32rpx;
}

.num2 {
  color: #66b54e;
}

/* 弹出层 */
.popup-box {
  padding: 60rpx;
}

.popup-top {
  display: flex;
  align-items: center;
  padding-bottom: 40rpx;
}

.popup-box .popup-top image {
  width: 30rpx;
  height: 50rpx;
}

.popup-box .popup-top text {
  margin-left: 220rpx;
}

.popup-list {
  text-align: center;
  background-color: #f8f8f5;
  border: 0.02667rem solid #e2e2e1;
  box-sizing: border-box;
  width: 100%;
  border-radius: 55rpx;
  height: 100rpx;
  margin-top: 20rpx;
  padding: 12rpx 0;
}

.popup-list view {
  font-size: 30rpx;
  overflow: hidden;
  height: 35rpx;
}

.popup-active {
  background-color: #f15a24;
  color: white;
}